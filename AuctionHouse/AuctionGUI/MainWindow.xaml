<Window x:Class="AuctionGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Auction item:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="Current bid:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="Your latest bid:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="Place bid:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,25,0,0"/>
            <Label Content="Messages:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,50,0,0"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label Content="Nokia 3210 mobiltelefon" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="570 kr." HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="570 kr. (Accepted)" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox Height="26" TextWrapping="Wrap" Text="" Margin="0,25,0,0" Width="150" HorizontalAlignment="Left"/>
            <Button x:Name="bidButton" Content="Bid now" Width="100" HorizontalAlignment="Left" Margin="50,3,0,0"/>
            <Label Content="Timer messages goes here.." VerticalAlignment="Top" Margin="0,25,0,0"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Orientation="Horizontal">
            <Label Content="Timeleft:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="35" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>
